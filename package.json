    "@chainx/keystore": "^2.22.31",
    "@chainx/types": "^2.22.31",
    "@chainx/ui": "^0.1.4",
    "@chainx/util": "^2.22.31",
    "@reduxjs/toolkit": "^1.0.4",
    "@svgr/webpack": "4.3.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
